<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".navItems.SellerUploadFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add product"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/seller_upload_frag_image"
            android:layout_width="240dp"
            android:layout_height="320dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/seller_upload_frag_btn_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Upload" />

    </LinearLayout>


    <Spinner
        android:background="@color/colorAccent"
        android:id="@+id/seller_upload_frag_category"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <EditText
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/seller_upload_frag_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product name" />

    <EditText
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/seller_upload_frag_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set price"
        android:inputType="number" />


    <EditText
        android:textColor="#ffffff"
        android:id="@+id/seller_upload_frag_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffff"
        android:hint="Set count"
        android:inputType="number" />

    <Button
        android:id="@+id/seller_upload_frag_btn_proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Proceed" />

</LinearLayout>